<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 第一栏：预设置 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="预设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingBottom="6dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/rowAppSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="flex_start">

            <!-- 方块：忽略电池优化 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileBattery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_neutral"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_lock_idle_charging"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileBatteryLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ignore_battery_optimization"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>

            <!-- 方块：允许自动启动 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tilePermissions"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_neutral"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tilePermissionsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="允许自动启动"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>
            
            <!-- 方块：VPN设置 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileOpenVpnSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_purple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileOpenVpnSettingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="VPN设置"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>
        </com.google.android.flexbox.FlexboxLayout>

        <!-- 第二栏：操控管理 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="操控管理"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/rowControl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="flex_start">

            <!-- 方块：启动/停止管控 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileStartControl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_neutral"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:id="@+id/tileStartControlIcon"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_media_play"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileStartControlLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_vpn"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>
        </com.google.android.flexbox.FlexboxLayout>

        <!-- 第三栏：参数设定 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="偏好设置"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="6dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/dividerColor"/>
        <com.google.android.flexbox.FlexboxLayout
            android:id="@+id/rowPreferences"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:flexWrap="wrap"
            app:justifyContent="flex_start"
            app:alignItems="flex_start">

            <!-- 方块：APP白名单 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileOpenSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_purple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_preferences"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileOpenSettingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/open_settings"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>

            <!-- 方块：设置邮箱 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileOpenEmailSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_purple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_dialog_email"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileOpenEmailSettingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置邮箱"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>

            <!-- 方块：一般设置 -->
            <com.example.stopnet.ui.SquareTile
                android:id="@+id/tileOpenGeneralSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_flexBasisPercent="42%"
                android:layout_margin="8dp"
                android:background="@drawable/tile_bg_purple"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="top|center_horizontal"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="@android:color/white"/>
                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/tileOpenGeneralSettingsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/general_settings"
                        android:textSize="14sp"
                        android:textColor="@android:color/white"
                        android:layout_marginTop="6dp"
                        android:layout_marginBottom="10dp"/>
                </LinearLayout>
            </com.example.stopnet.ui.SquareTile>
        </com.google.android.flexbox.FlexboxLayout>
    </LinearLayout>
</ScrollView>